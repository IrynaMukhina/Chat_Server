{
  "name": "simple-server",
  "version": "1.0.0",
  "description": "Simple REST server using express and mongoose",
  "main": "server.js",
  "scripts": {
    "start": "pm2 start server.js --watch && pm2 log",
    "test": "pm2 monit",
    "restart": "pm2 stop server && sudo pm2 start server",
    "stop": "pm2 stop server",
    "dev": "nodemon server.js | ./node_modules/.bin/pino-colada"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "mongodb"
  ],
  "engines": {
    "node": ">=10.x"
  },
  "private": true,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.5",
    "pino": "^5.13.6",
    "pm2": "^4.2.1",
    "socket.io": "^2.3.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mongodb": "^3.3.10",
    "@types/mongoose": "^5.5.32",
    "dotenv": "^8.1.0",
    "nodemon": "^1.19.4",
    "pino-colada": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IrynaMukhina/Chat_Server.git"
  },
  "author": "Angular Team",
  "license": "ISC"
}
